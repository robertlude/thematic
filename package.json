{
  "name": "thematic",
  "version": "0.6.0",
  "description": "Simple theme system for React",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup -c && npm run build:css",
    "build:css": "npx @tailwindcss/cli -o dist/styles.css",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roberts-website/thematic.git"
  },
  "author": "Robert Lude",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/roberts-website/thematic/issues"
  },
  "homepage": "https://github.com/roberts-website/thematic#readme",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "rollup": "^2.79.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.cjs.js",
      "types": "./dist/types/*.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  }
}
